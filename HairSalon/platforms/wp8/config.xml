<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vn.sunstar" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="InAppBrowser">
        <param name="wp-package" value="InAppBrowser" />
    </feature>
    <name>SunStar Salon</name>
    <description>
        GOLDWELL
    </description>
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Neon Dev Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <feature name="StatusBar">
        <param name="wp-package" value="StatusBar" />
    </feature>
    <feature name="Device">
        <param name="wp-package" value="Device" />
    </feature>
</widget>
